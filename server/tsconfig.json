{
  "compilerOptions": {
    "target": "ES2016",
    "moduleDetection": "auto",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  },
  "compileOnSave": true
}
